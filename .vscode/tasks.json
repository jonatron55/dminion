{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "isBackground": true,
      "command": "pnpm",
      "args": [
        "dev"
      ],
    },
    {
      "label": "ui:build",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "build"
      ]
    },
    {
      "label": "core:buildDebug",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--manifest-path=./src-tauri/Cargo.toml",
      ],
      "problemMatcher": [
        "$rustc"
      ],
    },
    {
      "label": "ui:dev&core:buildDebug",
      "dependsOn": [
        "core:buildDebug",
        "ui:dev"
      ]
    }
  ]
}

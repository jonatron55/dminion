{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "isBackground": true,
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "vite",
          "pattern": {
            "regexp": "^.*$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Local:"
          }
        }
      ],
    },
    {
      "label": "ui:build",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "build"
      ]
    },
    {
      "label": "core:buildDebug",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--manifest-path=./src-tauri/Cargo.toml",
      ],
      "problemMatcher": [
        "$rustc"
      ],
    },
    {
      "label": "core:buildRelease",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build",
        "--release",
        "--manifest-path=./src-tauri/Cargo.toml",
      ],
      "problemMatcher": [
        "$rustc"
      ],
    }
  ]
}
